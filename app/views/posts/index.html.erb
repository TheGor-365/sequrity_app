<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<% @posts.each do |post| %>
<div class="card my-5 p-5">
  <%= render post %>
  <p><%= link_to "Show post", post, class: "btn btn-sm btn-outline-dark" %></p>
</div>
<% end %>

<%= link_to "New post", new_post_path, class: "btn btn-sm btn-outline-dark" %>
